<!DOCTYPE html>
<html dir="rtl">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no"
    />
    <link rel="stylesheet" href="/css/timesScreen.css" />
    <title>בית כנסת שירת ישראל</title>
    <script
      src="https://cdn.socket.io/4.3.2/socket.io.min.js"
      integrity="sha384-KAZ4DtjNhLChOB/hxXuKqhMLYvx3b5MlT55xPEiNmREKRzeEm+RVPlTnAn0ajQNs"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript">
      function display_c() {
        var refresh = 1000; // Refresh rate in milli seconds
        mytime = setTimeout("display_ct()", refresh);
      }

      function display_ct() {
        var x = new Date();
        document.getElementById(
          "time"
        ).innerHTML = `${x.getHours()}:${x.getMinutes()}:${x.getSeconds()}`;
        display_c();
      }

      function initialPageSetup() {
        display_ct();
      }
    </script>
    <script>
      var socket = io.connect();
      let counter = 0;
      socket.on("touch", (data) => {
        console.log("touch", counter++);
        zmanim_data = data;
        let containerTable = `<th></th><th></th>`;
        for (let i in zmanim_data) {
          containerTable += `<tr>
              <td>
                <h2>
                  <strong>${i}:</strong>
                </h2>
              </td>
              <td>
                <h2>
                  <strong>${zmanim_data[i]}</strong>
                </h2>
              </td>
            </tr>`;
        }
        document.getElementById("zmanim-table-data").innerHTML = containerTable;
      });
    </script>
  </head>
  <body onload="initialPageSetup()">
    <div class="s-m-container">
      <div class="s-m-top">
        <img src="/img/prayName.png" alt="no image" />
      </div>
      <div class="s-m-middle">
        <div class="middle">
          <div id="time"></div>
        </div>
        <div class="left">
          <div id="date">
            <b
              ><script
                type="text/javascript"
                charset="utf-8"
                src="https://www.hebcal.com/etc/hdate-he.js"
              ></script>
            </b>
          </div>
        </div>
      </div>
      <div class="s-m-bottom">
        <div class="right">
          <div class="aaa">
            <div class="zmanim-data-c">
              <table id="zmanim-table-data">
                <!-- <% for (let i in zmanim_data) { %>
                <tr>
                  <td>
                    <h2><strong> <%= i %> :</strong></h2>
                  </td>
                  <td>
                    <h2><strong><%= zmanim_data[i] %></strong></h2>
                  </td>
                </tr>
                <% } %> -->
              </table>
            </div>
          </div>
        </div>
        <div class="middle">
          <div class="aaa"></div>
        </div>
        <div class="left">
          <div class="aaa"></div>
        </div>
      </div>
    </div>
  </body>
</html>
