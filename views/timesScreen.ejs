<%- include('partials/head.ejs') %>
  <link rel="stylesheet" href="/css/timesScreen.css" />
    <script type="module" src="/js/time-screen.js"></script>
    <script src="/js/memorize-names.js"></script>
    <script src="/js/day-time-display.js"></script>
    <script src="/js/joys-news.js"></script>
    <script>
      function init() {
        initialPageSetup();
        getMemorizeNames();
        getJoysNews();
      }
    </script>
  </head>
  <body onload="init()">
    <div class="s-m-container">
      <%- include('partials/header-page.ejs') %>
      <div class="s-m-times">
        <div class="s-m-right-times-con">
          <text><%= timeScreenTexts.todayTimesText %></text>
          <div class="s-m-right-times">
            <div class="marquee">
              <div class="track"><table id="zmanim-table-data"></table></div>
            </div>
          </div>
        </div>
        <div class="s-m-middle-times-con">
          <div class="middle-time-title-con">
            <text><%= timeScreenTexts.bulletinBoardText %></text>
          </div>
          <div class="messages-con-par">
            <div class="messages-con">
              <div class="messages">
                <div class="message-head-con-joys">
                  <div class="message-title">
                    <text><%= timeScreenTexts.JoysText %></text>
                  </div>
                </div>
                <div id="memorize-names" class="message-data">
                  <div class="message-data-container">
                    <div class="marquee">
                      <div class="track">
                        <div
                          id="joys-news-data"
                          class="message-data-content"
                        ></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="clip-art-design-con">
                <div class="clip-art-design"></div>
              </div>
              <div class="messages">
                <div class="message-head-con">
                  <div class="memorize-candle-left"></div>
                  <div class="message-title">
                    <text><%= timeScreenTexts.memorializeText %></text>
                  </div>
                  <div class="memorize-candle-right"></div>
                </div>
                <div id="memorize-names" class="message-data">
                  <div class="message-data-container">
                    <div class="marquee">
                      <div class="track">
                        <div
                          id="memorial-names-data"
                          class="message-data-content"
                        ></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="s-m-right-times-con">
          <text><%= timeScreenTexts.prayTimesText %></text>
          <div class="s-m-right-times">
            <div class="marquee">
              <div class="track">
                <table id="shabbat-times-table-data"></table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
